<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F3EF"
    android:gravity="start"
    android:orientation="vertical"
    android:padding="35dp">


    <TextView
        android:id="@+id/food_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Oats"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/food_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:accessibilityHeading="true"
        android:padding="20dp"
        android:text="desciption for food"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Number of servings"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:layout_width="93dp"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/number_of_servings"
            android:layout_width="106dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:inputType="numberDecimal"
            android:maxLength="4"
            android:text="1"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:weightSum="1"
        tools:layout_width="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Serving Size"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:layout_width="191dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/item_serving_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="numberDecimal"
            android:text="test"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Fat"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:layout_width="312dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/fat_grams"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:inputType="numberDecimal"
            android:text="test"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Carbohydrates"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/carb_grams"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:inputType="numberDecimal"
            android:text="test"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Protein"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <TextView
            android:layout_width="261dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/protein_grams"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:inputType="numberDecimal"
            android:text="test"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Calories"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <TextView
            android:layout_width="248dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/total_calories"
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:inputType="numberDecimal"
            android:text="test"
            android:textColor="@color/black"
            android:textSize="30sp" />

    </LinearLayout>

    <Button
        android:id="@+id/food_item_submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#2B5C7A"
        android:padding="20dp"
        android:text="Add Food"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>